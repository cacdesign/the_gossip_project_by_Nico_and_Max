<h1>Our Gossip</h1>

<p><strong>Titre : </strong><%= @gossip.title %></p>
 <p><strong>Contenu : </strong><%= @gossip.content %></p>
 <p><strong>Auteur : </strong><%= @gossip.user.first_name %> <%= @gossip.user.last_name %></p>

 <p><strong>La ville de l'auteur : </strong><%= @gossip.user.city.name %></p>

 <%= link_to "Voir la ville de l'auteur", city_path(@city_id), class:"btn btn-primary" %>


 <%= link_to "Voir la fiche de l'auteur", user_path(@user_id), class:"btn btn-primary"%> <br><br>
  <%= link_to "Edit Gossip", edit_gossip_path(@gossip), class:"btn btn-info" %>
  <%= link_to "Supprimer Gossip", gossip_path(@gossip), class:"btn btn-danger", method:"DELETE" %>
	<%= link_to "Like", gossip_likes_path(@gossip), class:"btn btn-danger", method:"POST" %>
	<%= link_to "Dislike", gossip_like_path(@gossip, @like), class:"btn btn-danger", method:"DELETE" %>
  <span style="color: #63987c;font-style: bold; padding-left: 13px;"><%=@gossip.likes.length%>  Likes</span>

  <br><br>
  <h2>Commentaires</h2>

  <form action= <%= gossip_comments_path(@gossip) %> method="POST">
      <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %> >
      <input placeholder="Ajouter un comment" type="text" name="comment">
      <br><br>   
      <input type="submit" value="Valider" class="btn btn-success">
  </form>
<br><br>
  <%@gossip.comments.each do |comment|%>
    <div style="font-size:12px">
    <strong><%=comment.user.first_name%> </strong> | <span style="color:#e3e3e3"> <%=comment.updated_at%> </span>  <br>
    <%=comment.content%>  <%= link_to "Edit Comment", edit_gossip_comment_path(@gossip, comment) %>
</div>
    <br><br>
  
 <%end%>



